set $mod Mod4
set $alt Mod1
set $term_cmd termite

set $color_blue "#5294e2"
set $color_black "#000000"
set $color_white "#FFFFFF"
set $color_gray "#3e424d"
set $color_darkgray "#2f343f"
set $color_red  "#f46067"

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:monospace 11px

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec $term_cmd

# kill focused window
bindsym $mod+c kill

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+u [urgent=latest] focus

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle
bindsym $mod+Tab focus mode_toggle

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split in horizontal orientation
bindsym $mod+n split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+t layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Control+space floating toggle

# scratchpad
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

# switch to workspace
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10
bindsym $mod+Escape workspace back_and_forth
bindsym $mod+Right workspace next_on_output
bindsym $mod+Left workspace prev_on_output

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

bindsym $mod+Control+h move workspace to output left
bindsym $mod+Control+l move workspace to output right
bindsym $mod+Control+j move workspace to output down
bindsym $mod+Control+k move workspace to output up

# reload the configuration file
bindsym $mod+Control+r reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# lock screen
bindsym $mod+Control+s exec --no-startup-id i3lock -S 0 -f -c $color_gray --insidevercolor=00000000 --insidewrongcolor=00000000 --insidecolor=00000000 --ringvercolor=5294e2ff --ringwrongcolor=f46067ff --ringcolor=2f343fff --linecolor=00000000 --separatorcolor=00000000 --textcolor=ffffffff --keyhlcolor=5294e2ff --bshlcolor=5294e2ff

# resize window (you can also use the mouse for that)
mode "resize" {
    # These bindings trigger as soon as you enter the resize mode
    bindsym h resize shrink width 2 px or 2 ppt
    bindsym j resize grow height 2 px or 2 ppt
    bindsym k resize shrink height 2 px or 2 ppt
    bindsym l resize grow width 2 px or 2 ppt

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

set $sysmenu "system: (l) lock, (e) exit i3, (s) suspend, (r) reboot, (p) poweroff"
mode $sysmenu {
    bindsym e         exit
    bindsym l         exec --no-startup-id i3lock -S 0 -f -c $color_gray --insidevercolor=00000000 --insidewrongcolor=00000000 --insidecolor=00000000 --ringvercolor=5294e2ff --ringwrongcolor=f46067ff --ringcolor=2f343fff --linecolor=00000000 --separatorcolor=00000000 --textcolor=ffffffff --keyhlcolor=5294e2ff --bshlcolor=5294e2ff
    bindsym p         exec --no-startup-id systemctl poweroff
    bindsym r         exec --no-startup-id systemctl reboot
    bindsym s         exec --no-startup-id systemctl suspend
    bindsym Return    mode "default"
    bindsym Escape    mode "default"
}
bindsym $mod+Delete mode $sysmenu

set $mode_display "Ext Screen: (v) VGA ON, (V) VGA OFF, (h) HDMI ON, (H) HDMI OFF, (r) reset"
mode $mode_display {
    bindsym v exec --no-startup-id xrandr --output VGA1 --auto --above LVDS1 && ~/.fehbg, mode "default"
    bindsym h exec --no-startup-id xrandr --output HDMI1 --auto --above LVDS1 && ~/.fehbg, mode "default"
    bindsym Shift v exec --no-startup-id xrandr --output VGA1 --auto --off && ~/.fehbg, mode "default"
    bindsym Shift h exec --no-startup-id xrandr --output HDMI1 --auto --off && ~/.fehbg, mode "default"
    bindsym r exec --no-startup-id xrandr --output LVDS1 --primary --mode 1366x768 --output HDMI1 --off --output VGA1 --off && ~/.fehbg, mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym XF86Display mode $mode_display

# Start rofi
bindsym $mod+p exec --no-startup-id rofi -show drun
bindsym $mod+x exec --no-startup-id rofi -show run
bindsym $mod+a exec --no-startup-id rofi -show window
bindsym $mod+y exec --no-startup-id rofi -show ssh

# Application Quickstart
bindsym $mod+$alt+b exec firefox
bindsym $mod+$alt+f exec nautilus
bindsym $mod+$alt+e exec thunderbird
bindsym $mod+$alt+r exec $term_cmd -e ranger
bindsym $mod+$alt+m exec $term_cmd -e mocp
bindsym $mod+$alt+c exec chromium --incognito
bindsym $mod+$alt+p exec keepassx2 '/home/popeye/sync/passwords.kdbx'
bindsym $mod+$alt+t exec telegram-desktop
bindsym $mod+$alt+Return exec $term_cmd --class tmuxdrop -e 'tmux new-session -A -s drop'

bindsym Print exec xfce4-screenshooter

bindsym $mod+Shift+n exec $term_cmd --class vimnotes -e 'nvim note:Notes'
bindsym $mod+$alt+n [class="vimnotes"] scratchpad show
for_window [class="vimnotes"] move scratchpad

# Toggle touchpad on/off
bindsym $mod+Control+t exec --no-startup-id synclient TouchpadOff=$(synclient -l | grep -c 'TouchpadOff.*=.*0')

# Multimedia controls
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 1 -steps 1
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 1 -steps 1
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer sset Master 2%+ && pkill -SIGRTMIN+10 i3blocks
bindsym XF86AudioLowerVolume exec --no-startup-id amixer sset Master 2%- && pkill -SIGRTMIN+10 i3blocks
bindsym XF86AudioMute exec --no-startup-id amixer sset Master toggle && pkill -SIGRTMIN+10 i3blocks
bindsym XF86WebCam exec cheese
bindsym XF86AudioNext exec --no-startup-id mocp --next
bindsym XF86AudioPrev exec --no-startup-id mocp --previous
bindsym XF86AudioPlay exec --no-startup-id /home/popeye/.moc/mocp_toggle
bindsym KP_Begin exec --no-startup-id /home/popeye/.moc/mocp_toggle
bindsym KP_Right exec --no-startup-id mocp --next
bindsym KP_Left exec --no-startup-id mocp --previous

bindsym $mod+Control+n exec --no-startup-id xrandr --output LVDS1 --primary --mode 1366x768 --output HDMI1 --off --output VGA1 --off && ~/.fehbg

#Assign windows to workspaces
assign [class="Firefox"] 1
assign [class="Thunderbird"] 10

for_window [class="mpv"] floating enable
for_window [class="Vlc"] floating enable
for_window [class="feh"] floating enable
for_window [class="Pavucontrol"] floating enable
for_window [class="Keepassx"] floating enable
for_window [class="pinentry"] floating enable
for_window [class="TelegramDesktop"] floating enable
for_window [class="tmuxdrop"] fullscreen enable

workspace_auto_back_and_forth yes

#disable window title
for_window [class="^.*"] border pixel 3

client.focused $color_blue $color_blue $color_white
client.focused_inactive $color_black $color_black $color_white
client.unfocused $color_black $color_black $color_white

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    position top
    tray_output primary
    status_command i3blocks
    font pango: DejaVu Sans, Symbola 9
    #separator_symbol "‚ùÆ"
    #separator_symbol "‚ù∞"
    separator_symbol "üôº"
    #separator_symbol "‚ï±"
    #separator_symbol "‚îÉ"
    bindsym button4 exec true
    bindsym button5 exec true
    colors {
        background $color_gray
        statusline $color_white
        #separator $color_white
        separator $color_blue
        focused_workspace  $color_blue $color_blue $color_white
        active_workspace   $color_blue $color_blue $color_white
        inactive_workspace $color_gray $color_gray $color_white
        urgent_workspace   $color_red $color_red $color_black
    }
}

